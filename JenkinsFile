pipeline {
    agent any

    environment {
        // Configuration globale
        MAVEN_HOME = 'C:\\Users\\asus\\Downloads\\apache-maven-3.9.9'
        JAVA_HOME = 'C:\\Program Files\\Java\\jdk-17'
    }

    stages {
        stage('Checkout') {
            steps {
                // Cloner le repository Git
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Nettoyage et compilation du projet Maven
                bat "${MAVEN_HOME}\\bin\\mvn clean compile"
            }
        }

        stage('Test') {
            steps {
                // Exécution des tests unitaires
                bat "${MAVEN_HOME}\\bin\\mvn test"
            }
        }

        stage('Package') {
            steps {
                // Création de l'artefact JAR
                bat "${MAVEN_HOME}\\bin\\mvn package"
            }
        }

        stage('Archive Artifacts') {
            steps {
                // Sauvegarde du fichier JAR dans Jenkins
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }

        stage('Deploy') {
            steps {
                // Exemple de commande de déploiement
                echo 'Déploiement en cours...'
                // Ajouter ici vos commandes de déploiement
            }
        }
    }

    post {
        always {
            // Actions après pipeline (par ex., supprimer les fichiers temporaires)
            cleanWs()
        }
        success {
            echo 'Pipeline terminé avec succès !'
        }
        failure {
            echo 'Pipeline échoué !'
        }
    }
}
